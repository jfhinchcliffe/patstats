<p id="notice"><%= notice %></p>

<h1>Listing Stops</h1>

<table>
  <thead>
    <tr>
      <th>Routes serviced</th>
      <th>Stop name</th>
      <th>Operator</th>
      <th>Diva</th>
      <th>Mode</th>
      <th>Currently checked</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stops.each do |stop| %>
      <tr>
        <td><%= stop.routes_serviced %></td>
        <td><%= stop.stop_name %></td>
        <td><%= stop.operator %></td>
        <td><%= stop.diva_id %></td>
        <td><%= stop.mode %></td>
        <td><%= stop.currently_checked %></td>
        <td><%= link_to 'Show', stop %></td>
        <td><%= link_to 'Edit', edit_stop_path(stop) %></td>
        <td><%= link_to 'Destroy', stop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

